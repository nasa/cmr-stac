{
  "name": "CMR-STAC",
  "version": "2.0.0",
  "maintainers": [
    {
      "name": "Earthdata Search",
      "email": "support@earthdata.nasa.gov"
    }
  ],
  "description": "NASA' Common Metadata Repository STAC implementation.",
  "repository": "https://github.com/NASA/cmr-stac",
  "license": "NASA-1.3",
  "scripts": {
    "preinstall": "cd cdk/cmr-stac && npm ci --target_arch=x64 && cd ../cmr-stac-dev && npm ci --target_arch=x64",
    "run-synth": "cd cdk/cmr-stac && npm run cdk synth -- --quiet",
    "run-synth-dev": "cd cdk/cmr-stac-dev && npm run cdk synth -- --quiet",
    "watch": "onchange 'src/**' -- npm run run-synth-dev",
    "start:api": "sam local start-api -t ./cdk/cmr-stac/cdk.out/cmr-stac-dev.template.json --warm-containers LAZY --port 3000 --docker-network host",
    "prestart": "npm run run-synth-dev ",
    "start": "node start.js",
    "test": "cross-env TS_NODE_FILES=true NODE_ENV=development mocha",
    "test:pattern": "cross-env TS_NODE_FILES=true NODE_ENV=development mocha --grep",
    "test:coverage": "cross-env TS_NODE_FILES=true NODE_ENV=development nyc --reporter=html --reporter=json --reporter=text mocha",
    "test:watch": "cross-env TS_NODE_FILES=true NODE_ENV=development mocha --watch",
    "deploy-application": "cd cdk/cmr-stac && npm ci --include=dev && npm run cdk deploy -- --progress events --require-approval never",
    "lint": "eslint src cdk",
    "lint:fix": "eslint src cdk --fix",
    "prettier": "prettier src cdk --check",
    "prettier:fix": "prettier src cdk --write",
    "format": "npm run prettier:fix && npm run lint:fix"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@serverless/event-mocks": "^1.1.1",
    "@serverless/typescript": "^3.21.0",
    "@types/aws-lambda": "^8.10.108",
    "@types/chai": "^4.3.4",
    "@types/chai-string": "^1.4.2",
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/mocha": "^10.0.0",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.11.9",
    "@types/serverless": "^3.12.8",
    "@types/sinon": "^10.0.13",
    "@types/sinon-chai": "^3.2.9",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "ajv": "^8.11.0",
    "ajv-formats": "^3.0.1",
    "ajv-formats-draft2019": "^1.6.1",
    "chai": "^4.3.7",
    "chai-string": "^1.5.0",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "json-schema-to-typescript": "^11.0.2",
    "mocha": "^10.2.0",
    "mocha-junit-reporter": "^2.2.0",
    "mocha-suppress-logs": "^0.3.1",
    "nyc": "^15.1.0",
    "onchange": "^7.1.0",
    "prettier": "^2.8.4",
    "sinon": "^14.0.2",
    "sinon-chai": "^3.7.0",
    "supertest": "^6.3.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@vendia/serverless-express": "^4.10.4",
    "aws-lambda": "^1.0.7",
    "aws-sdk": "^2.1692.0",
    "axios": "^1.7.4",
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.1.4",
    "eslint-plugin-import": "^2.28.0",
    "express": "^4.21.2",
    "graphql": "^16.8.1",
    "graphql-request": "^5.2.0",
    "helmet": "^6.2.0",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "qs": "^6.13.0",
    "semver": "^6.3.1",
    "source-map-support": "^0.5.21"
  }
}
